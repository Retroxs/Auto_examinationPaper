extends ../components/layout

block styles
    link(rel='stylesheet', href='http://cdn.bootcss.com/bootstrap/3.3.0/css/bootstrap.min.css')
block content
    nav.navbar.navbar-default(role="navigation" style="margin: 0;background-color: #323334")
        .container-fluid
            .navbar-header
                a.navbar-brand(href="/back/dashboard" style="color:#fdfeff") 出卷易
            ul.nav.navbar-nav.navbar-right
                li
                    a(href="/back/logout" style="color:#fff") 退出
    h1(style="text-align:center") 审核题目难度
    form.layui-form.layui-form-pane(action='/back/update_qLevel/'+'#{qInfo._id}' method='post' style="width:30%;margin:0 auto")
        if(qInfo)
            .layui-form-item(pane)
                label.layui-form-label 题型
                .layui-input-block
                    select( id='type' name="type")
                        if qInfo.type === "选择题"
                            option(value="选择题" ) 选择题
                            option(value="填空题") 填空题
                            option(value="判断题") 判断题
                            option(value="简答题") 简答题
                            option(value="解答题") 解答题
                            option(value="名词解释") 名词解释
                        else if qInfo.type === "填空题"
                            option(value="选择题") 选择题
                            option(value="填空题" selected) 填空题
                            option(value="判断题") 判断题
                            option(value="简答题") 简答题
                            option(value="解答题") 解答题
                            option(value="名词解释") 名词解释
                        else if qInfo.type === "判断题"
                            option(value="选择题") 选择题
                            option(value="填空题") 填空题
                            option(value="判断题" selected) 判断题
                            option(value="简答题") 简答题
                            option(value="解答题") 解答题
                            option(value="名词解释") 名词解释
                        else if qInfo.type === "简答题"
                            option(value="选择题") 选择题
                            option(value="填空题") 填空题
                            option(value="判断题") 判断题
                            option(value="简答题" selected) 简答题
                            option(value="解答题") 解答题
                            option(value="名词解释") 名词解释
                        else if qInfo.type === "解答题"
                            option(value="选择题") 选择题
                            option(value="填空题") 填空题
                            option(value="判断题") 判断题
                            option(value="简答题") 简答题
                            option(value="解答题" selected) 解答题
                            option(value="名词解释") 名词解释
                        else if qInfo.type === "名词解释"
                            option(value="选择题" selected) 选择题
                            option(value="填空题") 填空题
                            option(value="判断题") 判断题
                            option(value="简答题") 简答题
                            option(value="解答题") 解答题
                            option(value="名词解释" selected) 名词解释
            .layui-form-item(pane)
                label.layui-form-label 题目
                .layui-input-block
                    textarea.layui-textarea(type="text" name='question') #{qInfo.question}
            .layui-form-item(pane)
                label.layui-form-label 答案
                .layui-input-block
                    textarea.layui-textarea(type="text" name='answer') #{qInfo.answer}
            .layui-form-item(pane)
                label.layui-form-label 难度
                .layui-input-block
                    if(qInfo)
                        if(qInfo.level === '易')
                            input(type="radio" name="level" title="容易" value="易"  checked="")
                            input(type="radio" name="level" title="普通" value="中" )
                            input(type="radio" name="level" title="有难度" value="难")
                        else if(qInfo.level === '中')
                            input(type="radio" name="level" title="容易" value="易"  )
                            input(type="radio" name="level" title="普通" value="中" checked="")
                            input(type="radio" name="level" title="有难度" value="难")
                        else if(qInfo.level === '难')
                            input(type="radio" name="level" title="容易" value="易"  )
                            input(type="radio" name="level" title="普通" value="中" )
                            input(type="radio" name="level" title="有难度" value="难" checked="")
            button.layui-btn 提交

doctype html
html
    head
        title= title
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
        body
            form(id='editfile' method='post' action='/upload' enctype='multipart/form-data')
                input(name="fileImg" id='upfile' type='file')
                input(type='button' value='提交' onclick="up()")
        script(src='//cdn.bootcss.com/jquery/3.1.1/jquery.min.js')
        script.
            function up() {
                var formData = new FormData($("#editfile")[0]);
                $.ajax({
                    type: "POST",
                    url: "/upload",
                    data: formData,
                    processData: false, 	//必须false才会自动加上正确的Content-Type
                    contentType: false,
                    beforeSend: function () {
                    },
                    success: function (data) {
                        alert('ok')
                    },
                    error: function (data) {
                        alert('no')
                    }
                })

            }

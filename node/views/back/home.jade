extends ../components/layout

block styles
    link(rel='stylesheet', href='http://cdn.bootcss.com/bootstrap/3.3.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='../style/style.css')
    link(rel='stylesheet', href='../style/login.css')

block content
    nav.navbar.navbar-default(role="navigation" style="margin: 0;background-color: #323334")
        .container-fluid
            .navbar-header
                a.navbar-brand(href="" style="color:#fdfeff") 超级管理员管理系统
    .container.login_box
        form.form-signin(role="form" action='/api/back/login' method='get')
            h2.form-signin-heading 管理系统
            input.form-control.login_input(type="text"  placeholder="账号" required="" autofocus="" name='username' id='username')
            input.form-control.login_input(type="password" placeholder="密码" required="" autofocus="" name='password' id='password')
            .checkbox
                label(style="display: inline-block;margin-left: 15%;")
                    input(type="checkbox" value="remember-me")
                    span 记住密码
            button.btn.btn-lg.btn-primary.btn-block.login_btn(type="submit") 登录